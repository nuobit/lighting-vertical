<odoo>
    <record id="attachment_type_form_view" model="ir.ui.view">
        <field name="name">product.attachment.type.form.view.inherit.reporting</field>
        <field name="model">lighting.attachment.type</field>
        <field name="inherit_id" ref="lighting.attachment_type_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/group" position="inside">
                <field name="is_datasheet"/>
            </xpath>
        </field>
    </record>

    <record id="attachment_type_tree_view" model="ir.ui.view">
        <field name="name">product.attachment.type.tree.view.inherit.reporting</field>
        <field name="model">lighting.attachment.type</field>
        <field name="inherit_id" ref="lighting.attachment_type_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="inside">
                <field name="is_datasheet"/>
            </xpath>
        </field>
    </record>
</odoo>