<odoo>
    <record id="portal_product_view_form_inherit_lighting_portal_product_report" model="ir.ui.view">
        <field name="name">product_view_form.inherit.lighting_portal_product_report</field>
        <field name="model">lighting.portal.product</field>
        <field name="inherit_id" ref="lighting_portal.portal_product_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="print_product" string="Product data sheet"
                        type="object" class="o_sale_print"/>
            </xpath>
        </field>
    </record>
</odoo>