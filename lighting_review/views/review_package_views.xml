<odoo>
    <!-- view review package -->
    <record id="review_package_form_view" model="ir.ui.view">
        <field name="name">review.package.form</field>
        <field name="model">lighting.review.package</field>
        <field name="arch" type="xml">
            <form string="Review package template Form">
                <header/>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button type="object" class="oe_stat_button" icon="fa-thumbs-o-up"
                                name="action_product_reviewed">
                            <field string="Reviewed" name="product_reviewed_count" widget="statinfo"/>
                        </button>
                        <button type="object" class="oe_stat_button" icon="fa-question"
                                name="action_product_pending">
                            <field string="Pending" name="product_pending_count" widget="statinfo"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Package name"/>
                        </h1>
                    </div>
                    <group col="4">
                        <field name="start_date"/>
                        <field name="end_date"/>
                    </group>
                    <group col="4">
                        <group colspan="2">
                            <field name="responsible_ids" widget="many2many_tags"/>
                        </group>
                    </group>
                    <group>
                        <field name="description"/>
                    </group>
                    <group string="Products">
                        <field name="review_ids" nolabel="1">
                            <tree editable="bottom">
                                <field name="product_id"/>
                                <field name="reviewed"/>
                                <field name="date"/>
                                <field name="comment"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="review_package_tree_view" model="ir.ui.view">
        <field name="name">review.package.tree</field>
        <field name="model">lighting.review.package</field>
        <field name="arch" type="xml">
            <tree string="Review package"
                  decoration-danger="product_reviewed_percent &lt; 50"
                  decoration-info="product_reviewed_percent >= 50 and product_pending_count != 0"
                  decoration-success="product_reviewed_count > 0 and product_pending_count == 0"
                  decoration-bf="product_reviewed_count > 0 and product_pending_count == 0">
                <field name="name"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="responsible_ids" widget="many2many_tags"/>
                <field name="description"/>
                <field name="product_reviewed_percent" widget="progressbar"/>
                <field name="product_reviewed_count"/>
                <button name="action_product_reviewed" type="object"
                        icon="fa-external-link"/>
                <field name="product_pending_count"/>
                <button name="action_product_pending" type="object"
                        icon="fa-external-link"/>
            </tree>
        </field>
    </record>

    <!-- search review package -->
    <record id="review_package_search_view" model="ir.ui.view">
        <field name="name">lighting.review.package.search</field>
        <field name="model">lighting.review.package</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="Package"
                       filter_domain="['|', '|', ('name','ilike',self), ('responsible_ids','ilike',self), ('review_ids.product_id.reference','ilike',self)]"/>
                <field name="review_ids" string="Product"
                       filter_domain="[('review_ids.product_id.reference','ilike',self)]"/>
                <field name="name"/>
            </search>
        </field>
    </record>

    <!-- ================================ WINDOWS =========================== -->
    <!-- window action review package class -->
    <record id="review_package_action" model="ir.actions.act_window">
        <field name="name">Review packages</field>
        <field name="res_model">lighting.review.package</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_pending': 1}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">Create the first Review package</p>
        </field>
    </record>

    <!-- menu review package -->
    <menuitem id="review_packages_menu" name="Packages" parent="lighting_review_menu"
              action="review_package_action"/>
</odoo>