<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ================================ VIEWS =========================== -->
    <!-- view product -->
    <record model="ir.ui.view" id="product_form_view">
        <field name="name">product.form</field>
        <field name="model">lighting.product</field>
        <field name="arch" type="xml">
            <form string="Product Form">
                <sheet>
                    <group>
                        <field name="reference"/>
                        <field name="name"/>
                        <field name="ean"/>
                        <field name="catalog_ids" widget="many2many_tags"/>
                        <field name="category_id"/>
                        <field name="type_id"/>
                    </group>

                    <notebook>
                        <page string="General">
                            <group>
                                <field name="environment"/>
                                <field name="application_id"/>
                                <field name="finish_id"/>
                                <field name="body_material_id"/>
                                <field name="diffusor_material_id"/>
                                <field name="frame_material_id"/>
                                <field name="blade_material_id"/>
                                <field name="reflector_material_id"/>

                                <label for="ip_check" string="IP"/>
                                <div>
                                    <field name="ip_check"/>
                                    <field name="ip" style="width: 10%"
                                           attrs="{'invisible': [('ip_check', '=', False)], 'required': [('ip_check', '=', True)]}"/>
                                </div>

                                <label for="ip2_check" string="IP2"/>
                                <div>
                                    <field name="ip2_check"/>
                                    <field name="ip2" style="width: 10%"
                                           attrs="{'invisible': [('ip2_check', '=', False)], 'required': [('ip2_check', '=', True)]}"/>
                                </div>

                                <label for="ik_check" string="IK"/>
                                <div>
                                    <field name="ik_check"/>
                                    <field name="ik" style="width: 10%"
                                           attrs="{'invisible': [('ik_check', '=', False)], 'required': [('ik_check', '=', True)]}"/>
                                </div>

                                <field name="static_pressure_kg"/>
                                <field name="dynamic_pressure_kg"/>
                                <field name="dynamic_pressure_kmh"/>
                                <field name="corrosion_resistance"/>

                                <field name="protection_class"/>


                                <field name="technical_comments" widget="text"/>
                            </group>
                        </page>
                        <!--page string="Certifications">
                            <group>
                                <field name="gnx_compliance_statement" widget="many2many_binary"/>
                                <field name="eu_manufacturer_declaration" widget="many2many_binary"/>
                                <field name="emc" widget="many2many_binary"/>
                                <field name="lvd" widget="many2many_binary"/>
                                <field name="rohs" widget="many2many_binary"/>
                                <field name="others_test_reports" widget="many2many_binary"/>
                            </group>
                        </page>
                        <page string="Instructions">
                            <group>
                                <field name="installation_instructions" widget="many2many_binary"/>
                                <field name="assembly_instructions" widget="many2many_binary"/>
                            </group>
                        </page-->
                        <page string="Sources">
                            <group>
                                <field name="source_ids" nolabel="1">
                                    <tree editable="bottom">
                                        <field name="type"/>
                                        <field name="lamp"/>
                                        <field name="wattage"/>
                                        <field name="is_max_wattage"/>
                                        <field name="luminous_flux1"/>
                                        <field name="luminous_flux2"/>
                                        <field name="color_temperature"/>
                                        <field name="special_spectrum"/>
                                    </tree>
                                </field>
                            </group>
                        </page>
                        <page string="Attachments">
                            <group>
                                <field name="attachment_ids" nolabel="1">
                                    <tree editable="bottom">
                                        <field name="type_id"/>
                                        <field name="datas" filename="datas_fname"/>
                                        <field name="datas_fname"/>
                                        <field name="name"/>
                                        <field name="lang"/>
                                    </tree>
                                </field>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

