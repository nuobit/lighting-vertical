<odoo>
    <!-- ============= views ============= -->
    <record id="attachment_form_view" model="ir.ui.view">
        <field name="name">attachment.form</field>
        <field name="model">lighting.attachment</field>
        <field name="arch" type="xml">
            <form string="Attachment Form">
                <header>
                    <button name="regenerate_preview" string="Regenerate preview"
                            type="object" groups="base.group_no_one"/>
                </header>
                <sheet>
                    <field name="image_medium" class="oe_avatar" widget="image" readonly="1"/>
                    <field name="image_known"/>
                    <group>
                        <field name="type_id"/>
                    </group>
                    <group>
                        <field name="datas_location"/>
                        <field name="datas_url" widget="url"
                               attrs="{'invisible': [('datas_location', '!=', 'url')],'required': [('datas_location', '=', 'url')]}"/>
                        <field name="datas" filename="datas_fname"
                               attrs="{'invisible': [('datas_location', '!=', 'file')],'required': [('datas_location', '=', 'file')]}"/>
                        <field name="datas_fname" invisible="1"
                               attrs="{'required': [('datas_location', '=', 'file')]}"/>
                    </group>
                    <group>
                        <field name="name"/>
                        <field name="lang_id"/>
                        <field name="date"/>
                        <field name="is_default"/>
                        <field name="sequence"/>
                    </group>
                    <group attrs="{'invisible': [('datas_location', '=', 'url')]}">
                        <field name="public"/>
                        <field name="url" widget="url"
                               attrs="{'invisible': [('public', '!=', True)]}"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="attachment_tree_view" model="ir.ui.view">
        <field name="name">attachment.tree</field>
        <field name="model">lighting.attachment</field>
        <field name="arch" type="xml">
            <tree string="Attachment Tree">
                <field name="sequence" widget="handle"/>
                <field name="type_id"/>
                <field name="datas_location"/>
                <field name="datas_fname"/>
                <field name="datas_size" string="Size"/>
                <field name="datas_url"/>
                <field name="name"/>
                <field name="lang_id"/>
                <field name="date"/>
                <field name="is_default"/>
                <field name="public"/>
            </tree>
        </field>
    </record>

    <record id="attachment_kanban_view" model="ir.ui.view">
        <field name="name">attachment.kanban</field>
        <field name="model">lighting.attachment</field>
        <field name="arch" type="xml">
            <kanban class="o_res_partner_kanban">
                <field name="id"/>
                <field name="datas_fname"/>
                <field name="type_id"/>
                <field name="image_medium"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <t t-if="record.image_medium.raw_value">
                                    <img t-att-src="kanban_image('lighting.attachment', 'image_medium', record.id.raw_value)"/>
                                </t>
                                <t t-if="!record.image_medium.raw_value">
                                    <img t-att-src='_s + "/web/static/src/img/placeholder.png"'/>
                                </t>
                            </div>
                            <div class="oe_kanban_details">
                                <field name="datas_location" invisible="1"/>
                                <strong>
                                    <field name="datas_fname"
                                           attrs="{'invisible': [('datas_location', '!=', 'file')]}"/>
                                    <field name="datas_url"
                                           attrs="{'invisible': [('datas_location', '!=', 'url')]}"/>
                                </strong>
                                <div>
                                    <field name="type_id"/>
                                </div>
                                <div>
                                    <field name="lang_id"/>
                                </div>
                                <div>
                                    <field name="date"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>