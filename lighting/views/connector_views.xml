<odoo>
    <!-- ================================ VIEWS =========================== -->
    <!-- Form view connector product -->
    <record id="connector_product_view_form" model="ir.ui.view">
        <field name="name">connector.product.form</field>
        <field name="model">lighting.connector.product</field>
        <field name="arch" type="xml">
            <form string="Product Form">
                <header>
                    <button name="update" string="Update" type="object"
                            class="btn-primary"/>
                    <button name="print_product" string="Print" type="object" class="o_sale_print"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="reference" placeholder="Reference"/>
                        </h1>
                    </div>
                    <group>
                        <field name="description"/>
                        <field name="catalog"/>
                    </group>
                    <group>
                        <field name="qty_available"/>
                    </group>
                    <group>
                        <field name="last_update"/>
                    </group>
                    <group>
                        <field name="product_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree view connector product -->
    <record id="connector_product_view_tree" model="ir.ui.view">
        <field name="name">connector.product.tree</field>
        <field name="model">lighting.connector.product</field>
        <field name="arch" type="xml">
            <tree string="Products"
                  decoration-danger="qty_available==0"
                  decoration-success="qty_available!=0">
                <field name="reference"/>
                <field name="description"/>
                <field name="catalog"/>
                <field name="qty_available"/>
                <field name="last_update"/>
            </tree>
        </field>
    </record>

    <!-- Search view -->
    <record id="connector_product_view_search" model="ir.ui.view">
        <field name="name">connector.product.tree.search</field>
        <field name="model">lighting.connector.product</field>
        <field name="arch" type="xml">
            <search string="Product">
                <field name="reference" string="Product"
                       filter_domain="['|', '|', ('reference','ilike',self), ('description','ilike',self), ('catalog','ilike',self)]"/>
                <field name="reference"/>
                <field name="description"/>
                <field name="catalog"/>
                <separator/>
                <filter string="With stock" name="with_stock" domain="[('qty_available','!=', 0)]"/>
                <filter string="Without stock" name="without_stock" domain="[('qty_available','=', 0)]"/>
                <group expand="0" string="Group By">
                    <filter string="Catalog" name="groupby_catalog" domain="[]"
                            context="{'group_by': 'catalog'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- ================================ ACTIONS =========================== -->
    <!-- Action window connector.product -->
    <record id="connector_product_action_list" model="ir.actions.act_window">
        <field name="name">Products</field>
        <field name="res_model">lighting.connector.product</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">Create the first Product</p>
        </field>
    </record>

    <!-- ================================ MENU =========================== -->

    <!-- top level menu: no parent -->
    <menuitem id="connector_menu_root"
              name="Products"
              sequence="0"/>

    <!-- A first level in the left side menu is needed
         before using action= attribute -->
    <menuitem id="connector_menu"
              name="Products"
              parent="connector_menu_root"/>

    <!-- ============= connector product menu ============ -->
    <menuitem id="connector_product_menu"
              name="Products"
              parent="connector_menu"
              action="connector_product_action_list"/>
</odoo>