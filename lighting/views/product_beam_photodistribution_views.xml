<odoo>
    <record model="ir.ui.view" id="product_beam_photodistribution_form_view">
        <field name="name">product.beam.photodistribution.form</field>
        <field name="model">lighting.product.beam.photodistribution</field>
        <field name="arch" type="xml">
            <form string="Product beam photometric distribution Form">
                <sheet>
                    <group>
                        <field name="name" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record model="ir.ui.view" id="product_beam_photodistribution_tree_view">
        <field name="name">product.beam.photodistribution.tree</field>
        <field name="model">lighting.product.beam.photodistribution</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
            </tree>
        </field>
    </record>
    <record
        model="ir.actions.act_window"
        id="product_beam_photodistribution_list_action"
    >
        <field name="name">Product beam photometric distribution</field>
        <field name="res_model">lighting.product.beam.photodistribution</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p
                class="oe_view_nocontent_create"
            >Create the first Product beam photometric distribution
            </p>
        </field>
    </record>
</odoo>
